<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@drawable/gradient_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".LoginActivity">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginStart="42dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/logoapp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="-130dp"
                    android:layout_marginTop="-100dp"
                    android:src="@drawable/ic_circle_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="80dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginBottom="39dp"
                    android:textAlignment="center"
                    style="@style/txtTitleStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/iniciar_sesi_n" />


                <com.tistory.zladnrms.roundablelayout.RoundableLayout
                    android:id="@+id/layout_example"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginHorizontal="39dp"
                    android:padding="5dp"
                    app:backgroundColor="@color/colorWhite"
                    app:strokeLineWidth="1dp"
                    app:strokeLineColor="@color/colorPrimaryFive"
                    app:cornerLeftSide="10dp"
                    app:cornerRightSide="10dp">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtEmail"
                        style="@style/edtTypeOneStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/correo" />

                </com.tistory.zladnrms.roundablelayout.RoundableLayout>

                <com.tistory.zladnrms.roundablelayout.RoundableLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginHorizontal="39dp"
                    android:padding="5dp"
                    app:backgroundColor="@color/colorWhite"
                    app:strokeLineWidth="1dp"
                    app:strokeLineColor="@color/colorPrimaryFive"
                    app:cornerLeftSide="10dp"
                    app:cornerRightSide="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtPassword"
                        style="@style/edtTypeOneStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/contrase_a" />

                </com.tistory.zladnrms.roundablelayout.RoundableLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="69dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginHorizontal="39dp"
                    android:text="@string/entrar"
                    style="@style/btnTypeOneStyle"
                    android:textAllCaps="false" />

                <TextView
                    android:textAlignment="textEnd"
                    android:layout_marginTop="19dp"
                    android:layout_marginEnd="39dp"
                    style="@style/txtForgotStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/olvid_mi_contrase_a" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animation_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="-230dp"
                    app:lottie_rawRes="@raw/hand_with_lemon"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</layout>
