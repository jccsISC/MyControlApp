<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyControl" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondaryOne</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryOne</item>
        <item name="colorOnSecondary">@color/colorBlack</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="edtTypeOneStyle" parent="">
        <item name="android:paddingStart">20dp</item>
        <item name="android:textColor">@color/colorLetterOne</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="txtTitleStyle" parent="">
        <item name="android:textColor">@color/colorLetterOne</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="txtForgotStyle" parent="">
        <item name="android:textColor">@color/colorLetterOne</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="btnTypeOneStyle" parent="">
        <item name="backgroundTint">@color/colorLetterOne</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">19sp</item>
    </style>

</resources>